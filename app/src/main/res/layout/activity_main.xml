<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.xxhong.rosclient.ui.MainActivity">

    <EditText
        android:id="@+id/userName"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/userpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#9AFFFFFF"
        android:ems="10"
        android:hint="账号"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/userpassword"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="204dp"
        android:background="#9AFFFFFF"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/txt_second"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"
        android:background="#00FFFFFF"
        android:focusable="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:src="@drawable/mg_logo" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/userpassword"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/button_circle_shape"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userpassword"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/btn_circle_green"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btn_fgtpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="330dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:text="忘记密码？"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/text_ip"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="66dp"
        android:layout_toEndOf="@+id/textView8"
        android:background="#1EFFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="192.168.43.202"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="66dp"
        android:text="ip:"
        android:textColor="#FFFFFF" />

</RelativeLayout>
